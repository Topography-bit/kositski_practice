 <Window x:Class="CalculatorApp.MainWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Простой калькулятор"
 Height="600"
 Width="350"
 ResizeMode="NoResize"
 Icon="Images/MAX.jpg"
 WindowStartupLocation="CenterScreen"><Grid Margin="10">
        
            <!-- Определяем строки Grid -->
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <!-- Заголовок -->
        <StackPanel>
            <TextBlock Grid.Row="0"
 Text="Калькулятор"
 FontSize="24"
 FontWeight="Bold"
 HorizontalAlignment="Center"
 Margin="0,0,0,20"/>
    <!-- Первое число -->
    <StackPanel Grid.Row="1" Margin="0,0,0,10">
        <TextBlock Text="Первое число:" FontSize="14"
Margin="0,0,0,5"/>
        <TextBox x:Name="FirstNumberTextBox"
 FontSize="16"
Padding="5"
Height="35" Text="1"/>
    </StackPanel>
    <!-- Второе число -->
    <StackPanel Grid.Row="2" Margin="0,0,0,10">
        <TextBlock Text="Второе число:" FontSize="14"
Margin="0,0,0,5"/>
        <TextBox x:Name="SecondNumberTextBox"
 FontSize="16"
Padding="5"
Height="35" Text="2"/>
    </StackPanel>
    <!-- Операции -->
    <StackPanel Grid.Row="3" Margin="0,0,0,15">
        <TextBlock Text="Выберите операцию:" FontSize="14"
Margin="0,0,0,10"/>
        <UniformGrid Rows="1" Columns="6">
            <Button x:Name="AddButton"
 Content="+"
FontSize="20"
Margin="0,0,5,0"
Height="50"
Click="AddButton_Click"
Background="Aqua"/>
            <Button x:Name="SubtractButton"
 Content="-"
FontSize="20"
Margin="0,0,5,0"
Height="50"
Click="SubtractButton_Click"
Background="Aqua"/>
            <Button x:Name="MultiplyButton"
 Content="×"
 FontSize="20"
Margin="0,0,5,0"
Height="50"
Click="MultiplyButton_Click"
Background="Aqua"/>
            <Button x:Name="DivideButton"
 Content="÷"
FontSize="20"
Margin="0,0,5,0"
Height="50"
Click="DivideButton_Click"
Background="Aqua"/>
                <Button x:Name="Degree"
 Content="**"
 FontSize="20"
Margin="0,0,5,0"
Height="50"
Click="Degree_Click"
Background="Aqua"/>
                    <Button x:Name="sqrt"
 Content="√?"
 FontSize="20"
Margin="0,0,0,0"
Height="50"
Click="sqrt_Click"
Background="Aqua"/>
                </UniformGrid>
    </StackPanel>
    <!-- Результат -->
    <StackPanel Grid.Row="4" Margin="0,0,0,15">
        <TextBlock Text="Результат:" FontSize="14" Margin="0,0,0,5"/>
        <TextBox x:Name="ResultTextBox"
 FontSize="18"
Padding="5"
Height="40"
IsReadOnly="True"
Background="LightYellow"
FontWeight="Bold"/>
    </StackPanel>


        <!-- Кнопка очистки -->
        <Button Grid.Row="5"
 Content="Очистить"
 FontSize="16"
 Height="40"
 VerticalAlignment="Top"
 Click="ClearButton_Click"/>
     

    <TextBlock Text="История операций: " FontSize="14" Margin="0,0,0,5"/>
    <ListBox x:Name="History" Height="100" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>


</Window>